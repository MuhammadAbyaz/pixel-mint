{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL", "AUTH_SECRET", "AUTH_GOOGLE_ID", "AUTH_GOOGLE_SECRET", "AUTH_LOOPS_KEY", "AUTH_LOOPS_TRANSACTIONAL_ID", "MAX_TOKEN_AGE", "LOOPS_TRANSACTION_ENDPOINT"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "AUTH_SECRET", "AUTH_GOOGLE_ID", "AUTH_GOOGLE_SECRET", "AUTH_LOOPS_KEY", "AUTH_LOOPS_TRANSACTIONAL_ID", "MAX_TOKEN_AGE", "LOOPS_TRANSACTION_ENDPOINT"]
    }
  }
}
